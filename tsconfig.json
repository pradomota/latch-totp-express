{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": false,
    "outDir": "./dist",
    "preserveConstEnums": true,
    "pretty": true,
    "removeComments": true,
    "target": "es2015",
    "sourceMap": true
  },
  "filesGlob": [
    "typings/index.d.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}
